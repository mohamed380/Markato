
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Markato/Layout.cshtml";
}

<div class="login-form">
    <form action="/Markato/CustomerSignin" id="Singin" method="post">
        <div class="form-group">
            <label>Email address</label>
            <input type="email" name="email" class="form-control" placeholder="Email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control" placeholder="Password">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox"> Remember Me
            </label>
            <label class="pull-right">
                <a href="#">Forgotten Password?</a>
            </label>
        </div>

        <label><input type="checkbox" name="Ismt" value="true" class="mt"> MT</label>
        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30 SUSignin">Sign in</button>

        <div class="register-link m-t-15 text-center">
            <p>Don't have account ? <a href="/Markato/SignUp"> Sign Up Here</a></p>
        </div>
    </form>
</div>

